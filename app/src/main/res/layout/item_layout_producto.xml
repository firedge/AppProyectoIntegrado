<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iv_carrito"
        android:layout_toStartOf="@+id/iv_carrito"
        android:id="@+id/rl_item"
        android:background="#ffffffff">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_imagen"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:layout_margin="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Producto"
            android:id="@+id/tv_titulo"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_imagen"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_imagen"
            android:layout_above="@+id/tv_precio"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="888.8â‚¬"
            android:id="@+id/tv_precio"
            android:textStyle="bold"
            android:textColor="#ffca0000"
            android:layout_alignBottom="@+id/iv_imagen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/tv_stock"
            android:layout_toEndOf="@+id/tv_stock"
            android:layout_marginLeft="10dp"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/tv_stock"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/iv_imagen"
            android:layout_alignLeft="@+id/tv_titulo"
            android:layout_alignStart="@+id/tv_titulo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/tv_stock"
            android:layout_alignTop="@+id/tv_precio"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:textColor="#ff00cc00"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_carrito"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/carrito"
        android:background="#ff00cc00"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/separador"
        android:background="#ffcccccc"
        android:layout_below="@+id/rl_item"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>